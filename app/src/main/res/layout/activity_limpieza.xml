<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/configuration"
    android:gravity="center"
    tools:context=".Limpieza">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usted ha seleccionado el servicio de limpieza"
                android:id="@+id/loginText"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#49698F"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/username"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="5dp"
                android:hint="¿Donde se realizará el servicio?"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/password"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="5dp"
                android:hint="Area a limpiar"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contadorDormitorios"
                android:textSize="19sp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="Numero de dormitorio"
                android:textColor="#49698F"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/numerodormitorio"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                android:textColor="#49698F"/>

            <LinearLayout
                android:id="@+id/menuLinearLayoutDormitorios"
                android:layout_below="@+id/midTableLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/menosDormitorio"
                    android:text="-"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:backgroundTint="#49698F"
                    android:layout_width="15dp"/>

                <Button
                    android:id="@+id/resetDormitorio"
                    android:text="Iniciar"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:backgroundTint="#49698F"
                    android:layout_width="15dp"/>

                <Button
                    android:id="@+id/masDormitorio"
                    android:text="+"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:backgroundTint="#49698F"
                    android:layout_width="15dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contadorSalas"
                android:textSize="19sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Número de salas"
                android:textColor="#49698F"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/numeroSalas"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                android:textColor="#49698F"/>

            <LinearLayout
                android:id="@+id/menuLinearLayout"
                android:layout_below="@+id/midTableLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/menosSalas"
                    android:text="-"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:backgroundTint="#49698F"
                    android:layout_width="15dp"/>
                <Button
                    android:id="@+id/resetSalas"
                    android:text="Iniciar"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:backgroundTint="#49698F"
                    android:layout_width="15dp"/>
                <Button
                    android:id="@+id/masSalas"
                    android:text="+"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:backgroundTint="#49698F"
                    android:layout_width="15dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contadorBaño"
                android:textSize="19sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="Numero de Baños"
                android:textStyle="bold"
                android:textColor="#49698F"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/numeroBaño"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                android:textColor="#49698F"/>

            <LinearLayout
                android:id="@+id/menuLinearLayoutBaño"
                android:layout_below="@+id/midTableLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/menosBaño"
                    android:text="-"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:backgroundTint="#49698F"
                    android:layout_width="15dp"/>

                <Button
                    android:id="@+id/resetBaño"
                    android:text="Iniciar"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:backgroundTint="#49698F"
                    android:layout_width="15dp"/>


                <Button
                    android:id="@+id/masBaño"
                    android:text="+"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:backgroundTint="#49698F"
                    android:layout_width="15dp"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/servicioextra"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Especificaciones del servicio"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="15dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/siguiente"
                android:text="Siguiente"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#49698F"
                app:cornerRadius = "15dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>